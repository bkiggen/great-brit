{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && DATABASE_URL=\"postgresql://dummy:dummy@localhost:5432/dummy\" npm install"
  },
  "deploy": {
    "startCommand": "cd server && npx prisma generate && node index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
